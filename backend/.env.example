# Application
APP_NAME=LearnFi
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# API
API_V1_PREFIX=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Database
DATABASE_URL=postgresql+asyncpg://learnfi:learnfi@localhost:5432/learnfi
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# File Storage (AWS S3 / Cloudflare R2)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=learnfi-uploads
S3_ENDPOINT_URL=

# Blockchain / Web3
ALCHEMY_API_KEY=your_alchemy_api_key_here
BASE_SEPOLIA_RPC_URL=https://base-sepolia.g.alchemy.com/v2/your_key
BASE_MAINNET_RPC_URL=https://base-mainnet.g.alchemy.com/v2/your_key
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your_key

# Contract Addresses (Base Sepolia)
LEARN_TOKEN_ADDRESS=
BADGE_NFT_ADDRESS=
STAKING_POOL_ADDRESS=
NFT_STAKING_POOL_ADDRESS=

# Admin Wallet (for NFT minting, etc.)
ADMIN_PRIVATE_KEY=
ADMIN_WALLET_ADDRESS=

# Email (Optional - Resend/SendGrid)
EMAIL_ENABLED=False
RESEND_API_KEY=
FROM_EMAIL=noreply@learnfi.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
AUTH_RATE_LIMIT_PER_MINUTE=5

# Monitoring (Optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Feature Flags
ENABLE_AUTO_VERIFICATION=True
ENABLE_NFT_MINTING=False
ENABLE_STAKING=False
ENABLE_EMAIL_NOTIFICATIONS=False
